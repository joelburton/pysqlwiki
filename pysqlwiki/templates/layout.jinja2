<!DOCTYPE html>
<html lang="{{ request.locale_name }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="pyramid web application">
  <meta name="author" content="Pylons Project">
  <link rel="shortcut icon"
        href="{{ request.static_url('pysqlwiki:static/pyramid-16x16.png') }}">

  <title>{% block subtitle %}{% endblock %} - Pyramid Wiki</title>

  <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css"
        rel="stylesheet">
  <link href="{{ request.static_url('pysqlwiki:static/theme.css') }}" rel="stylesheet">
  <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
  <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>

</head>

<body>

<div class="starter-template">
  <div class="container">
    <div class="content">
      {% if request.user is none %}
        <p class="pull-right">
          <a href="{{ 'login'|route_url }}">Login</a>
        </p>
      {% else %}
        <p class="pull-right">
          {{ request.user.name }} <a href="{{ 'logout'|route_url }}">Logout</a>
        </p>
      {% endif %}
      {% block content %}
        <p>No content</p>
      {% endblock content %}
    </div>
  </div>
</div>


</body>
</html>
